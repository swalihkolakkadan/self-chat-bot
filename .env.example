# API Keys
GOOGLE_API_KEY=your_gemini_api_key_here

# AWS Polly TTS
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
# Voice options: Matthew, Joanna, Stephen, Ruth (en-US neural)
POLLY_VOICE_ID=Matthew
# Engine options: standard, neural, long-form, generative
POLLY_ENGINE=neural

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_PER_DAY=10

# Chroma DB
CHROMA_PERSIST_DIR=./chroma_db

# Private Knowledge Repository
# Create a private GitHub repo with your personal documents (markdown files).
# The repo structure should mirror the knowledge/ directory:
#   personal/about.md, portfolio/experience.md, portfolio/skills.md, etc.
GITHUB_TOKEN=your_github_personal_access_token_here
PRIVATE_KNOWLEDGE_REPO=swalihkolakkadan/swalih-private-knowledge
